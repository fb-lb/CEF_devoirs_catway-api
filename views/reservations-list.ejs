<% layout('layout') %>

<main>
    <h1>Liste des catways</h1>
    <p class="error"><%= reservations.message %></p>
    <table id="reservationsList">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom du client</th>
                <th>Nom du bateau</th>
                <th>Numéro du catway</th>
                <th>Date d'arrivée</th>
                <th>Date de départ</th>
                <th>Détails</th>
            </tr>
        </thead>
        <tbody>
            <% reservations.forEach((reservation) => { %>
            <tr>
                <td><%= reservation._id %></td>
                <td><%= reservation.clientName %></td>
                <td><%= reservation.boatName %></td>
                <td><%= reservation.catwayNumber %></td>
                <td><%= reservation.checkIn %></td>
                <td><%= reservation.checkOut %></td>
                <td><a href="/catway/<%= reservation.catwayId %>/reservation/<%= reservation._id%>">Voir la fiche</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</main>